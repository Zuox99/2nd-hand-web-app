<%- include ("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">Add New Comment to <%= market.name %></h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/markets/<%= market._id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="comments">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<a href="/markets">Go Back</a>
		</div>
	</div>
</div>

<%- include ("../partials/footer") %>